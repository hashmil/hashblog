---
export interface Props {
  prevPost?: {
    slug: string;
    title: string;
  };
  nextPost?: {
    slug: string;
    title: string;
  };
}

const { prevPost, nextPost } = Astro.props;
---

{(prevPost || nextPost) && (
  <nav class="border-t border-gray-800 pt-8 mt-12">
    <div class="flex flex-col md:flex-row gap-6 md:gap-8">
      {prevPost && (
        <div class="flex-1">
          <a 
            href={`/blog/${prevPost.slug}`}
            class="group flex items-start gap-4 p-6 bg-dark-lighter rounded-lg border border-gray-800 hover:border-gray-700 transition-all duration-300 hover:shadow-lg hover:shadow-accent/10"
          >
            <div class="flex-shrink-0 w-10 h-10 bg-gradient-primary rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-200">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <div class="text-sm text-text-muted mb-1 font-accent">Previous Post</div>
              <h3 class="text-white font-primary leading-tight group-hover:text-accent transition-colors duration-200">
                {prevPost.title}
              </h3>
            </div>
          </a>
        </div>
      )}
      
      {nextPost && (
        <div class="flex-1">
          <a 
            href={`/blog/${nextPost.slug}`}
            class="group flex items-start gap-4 p-6 bg-dark-lighter rounded-lg border border-gray-800 hover:border-gray-700 transition-all duration-300 hover:shadow-lg hover:shadow-accent/10 text-right"
          >
            <div class="flex-1 min-w-0 order-2">
              <div class="text-sm text-text-muted mb-1 font-accent">Next Post</div>
              <h3 class="text-white font-primary leading-tight group-hover:text-accent transition-colors duration-200">
                {nextPost.title}
              </h3>
            </div>
            <div class="flex-shrink-0 w-10 h-10 bg-gradient-primary rounded-full flex items-center justify-center group-hover:scale-110 transition-transform duration-200 order-1">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        </div>
      )}
    </div>
  </nav>
)} 
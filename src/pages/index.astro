---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Menu from '../components/Menu.vue';
import { getCollection } from 'astro:content';
import { getPostUrl } from '../utils/url';

// Get all blog posts and sort by date
const allPosts = await getCollection('blog', ({ data }) => {
	return !data.draft;
});

const sortedPosts = allPosts.sort((a, b) => 
	new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

function formatDate(date: Date) {
	return new Intl.DateTimeFormat('en-US', {
		year: 'numeric',
		month: 'long',
		day: 'numeric'
	}).format(date);
}
---

<Layout title="Notes by Hash Milhan - Creative Technology Director">
	<Header />
	
	<main class="container py-12" transition:name="main-content">
		<div class="max-w-3xl mx-auto">
		<!-- Featured/Latest Post -->
		{sortedPosts[0] && (
			<article class="mb-16" transition:name={`post-preview-${sortedPosts[0].id}`}>
				<div class="post-meta mb-4" transition:name="post-meta">
					{formatDate(sortedPosts[0].data.pubDate)}
				</div>

				<h1 class="text-3xl md:text-5xl font-primary text-white mb-6 leading-tight" transition:name={`post-title-${sortedPosts[0].id}`}>
					<a href={getPostUrl(sortedPosts[0].id, sortedPosts[0].data.pubDate)} class="hover:text-accent transition-colors duration-200">
						{sortedPosts[0].data.title}
					</a>
				</h1>

				<p class="text-base font-text leading-relaxed mb-6" style="color: #d1d5db; line-height: 1.8;" transition:name={`post-description-${sortedPosts[0].id}`}>
					{sortedPosts[0].data.description}
				</p>

				<a
					href={getPostUrl(sortedPosts[0].id, sortedPosts[0].data.pubDate)}
					class="font-accent transition-colors duration-200"
					style="color: #fff; border-bottom: dotted 1px #FF5682; text-decoration: none;"
					onmouseover="this.style.color='#FF5682'; this.style.borderBottomColor='#fff';"
					onmouseout="this.style.color='#fff'; this.style.borderBottomColor='#FF5682';"
					transition:name="read-more-link"
				>
					Read More â†’
				</a>
			</article>
		)}
		
		<!-- Previous Posts List -->
		{sortedPosts.length > 1 && (
			<section transition:name="posts-list">
				<h2 class="text-xl font-primary text-accent mb-4">Previous Posts</h2>
				
				<div class="space-y-0">
					{sortedPosts.slice(1).map((post) => (
						<article class="border-b py-4 last:border-b-0" style="border-color: #6b7280;" transition:name={`post-item-${post.id}`}>
							<h3 class="text-xl md:text-2xl font-primary text-white hover:text-accent transition-colors duration-200 leading-tight mb-2">
								<a href={getPostUrl(post.id, post.data.pubDate)} transition:name={`post-link-${post.id}`}>
									{post.data.title}
								</a>
							</h3>
							<div class="font-text text-sm" style="color: #6b7280;">
								{formatDate(post.data.pubDate)}
							</div>
						</article>
					))}
				</div>
			</section>
		)}
		</div>
	</main>
	
	<!-- Menu Component -->
	<Menu client:load />
</Layout>

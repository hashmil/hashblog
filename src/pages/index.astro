---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Menu from '../components/Menu.vue';
import { getCollection } from 'astro:content';

// Get all blog posts and sort by date
const allPosts = await getCollection('blog', ({ data }) => {
	return !data.draft;
});

const sortedPosts = allPosts.sort((a, b) => 
	new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);

function formatDate(date: Date) {
	return new Intl.DateTimeFormat('en-US', {
		year: 'numeric',
		month: 'long',
		day: 'numeric'
	}).format(date);
}
---

<Layout title="Hash Milhan - Creative Technology Director">
	<Header />
	
	<main class="container py-12">
		<!-- Featured/Latest Post -->
		{sortedPosts[0] && (
			<article class="mb-16">
				<div class="post-meta mb-4">
					{formatDate(sortedPosts[0].data.pubDate)}
				</div>
				
				<h1 class="text-3xl md:text-5xl font-primary text-white mb-6 leading-tight">
					<a href={`/blog/${sortedPosts[0].slug}`} class="hover:text-accent transition-colors duration-200">
						{sortedPosts[0].data.title}
					</a>
				</h1>
				
				<p class="text-lg text-text-light font-text leading-relaxed mb-6">
					{sortedPosts[0].data.description}
				</p>
				
				<a 
					href={`/blog/${sortedPosts[0].slug}`}
					class="font-accent transition-colors duration-200"
					style="color: #fff; border-bottom: dotted 1px #FF5682; text-decoration: none;"
					onmouseover="this.style.color='#FF5682'; this.style.borderBottomColor='#fff';"
					onmouseout="this.style.color='#fff'; this.style.borderBottomColor='#FF5682';"
				>
					Read More â†’
				</a>
			</article>
		)}
		
		<!-- Previous Posts List -->
		{sortedPosts.length > 1 && (
			<section>
				<h2 class="text-xl font-primary text-accent mb-8">Previous Posts</h2>
				
				<div class="space-y-0">
					{sortedPosts.slice(1).map((post) => (
						<article class="post-list-item">
							<div class="flex flex-col md:flex-row md:items-baseline md:justify-between gap-2 md:gap-8">
								<div class="flex-1 min-w-0">
									<h3 class="post-title">
										<a href={`/blog/${post.slug}`}>
											{post.data.title}
										</a>
									</h3>
									{post.data.description && (
										<p class="post-excerpt">
											{post.data.description}
										</p>
									)}
								</div>
								
								<div class="post-meta md:text-right md:flex-shrink-0">
									{formatDate(post.data.pubDate)}
								</div>
							</div>
						</article>
					))}
				</div>
			</section>
		)}
	</main>
	
	<!-- Menu Component -->
	<Menu client:load />
</Layout>
